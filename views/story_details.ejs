<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/navBar.ejs', {pageTitle}) %>
    <article class="story-details-container">
      <div class="story">
        <p><span class="intro">Title: </span><%= story.title %></p>
        <p><span class="intro">Body: </span><%= story.body %></p>
        <p>
          <span class="intro">Category: </span><%=
          story.category.name[0].toUpperCase() + story.category.name.slice(1)%>
        </p>
        <p>
          <span class="intro">Published: </span><%= story.formatted_created_date
          %>
        </p>
      </div>
      <div class="story-author">
        <a class="author-link" href="/account/profile/<%=story.author._id%>"
          ><span class="intro">Author: </span><%= story.author.username %></a
        >
        <p>
          <span class="intro">Date of Birth: </span><%=
          story.author.formatted_birthDate %>
        </p>
      </div>
      <a href="/story/catalog" class="home-btn">Go Back to Catalog</a>
    </article>

    <%- include('./partials/icons.ejs') %>
  </body>
</html>
